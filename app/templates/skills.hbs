<div id="skills-container">
    <div class="card box-shadow">
    <h2>Skills</h2>
    {{#if deleteIsClicked}}
        {{#each model as |skillUnit|}}
        {{delete-skill-listing skill=skillUnit}}
        {{/each}}
    {{else}}
        {{#each model as |skillUnit|}}
            {{skill-listing skill=skillUnit}}
        {{/each}}
    {{/if}}
    </div>
</div>

{{#if isShowingModal}}
  {{#modal-dialog onClose="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
    {{input class="" value=newSkill placeholder="Enter Skill name"}}
    <button {{action 'addSkill'}}>Add</button>
  {{/modal-dialog}}
{{/if}}

{{#floating-mobile-buttons position="top left" as |toggleChildren|}}
    {{#floating-mobile-child-buttons label="Save Page as PDF"}}
      <button class="button" {{action "exportAsPdf"}}>PDF</button>
    {{/floating-mobile-child-buttons}}
    {{#floating-mobile-child-buttons label="Add"}}
       <button class="button" {{action "toggleModal"}} >+</button>
    {{/floating-mobile-child-buttons}}
    {{#floating-mobile-child-buttons label="Delete"}}
        {{#if deleteIsClicked}}
            <button class="button" {{action "deleteIsDone"}}>Done</button>
        {{else}}
            <button class="button" {{action "deleteIsClicked"}}>x</button>
        {{/if}}
    {{/floating-mobile-child-buttons}}
{{/floating-mobile-buttons}}